{
  "name": "cli",
  "version": "0.0.1",
  "type": "module",
  "types": "dist/index.d.ts",
  "dependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "commander": "^10.0.0",
    "mclib": "workspace:*",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0"
